<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/WizardInlineContent">

    <cards.nine.app.ui.components.layouts.WizardInlineWorkspaces
        android:id="@+id/wizard_inline_workspace"
        style="@style/WizardInlineWorkspace"/>

    <FrameLayout
        style="@style/WizardInlineBottomPanel">

        <LinearLayout
            style="@style/WizardInlinePaginationPanel"
            android:id="@+id/wizard_inline_pagination_panel"/>

        <TextView
            style="@style/WizardInlineSkipAction"
            android:id="@+id/wizard_inline_skip"/>

        <TextView
            style="@style/WizardInlineGotItAction"
            android:id="@+id/wizard_inline_got_it"/>

    </FrameLayout>

</LinearLayout>