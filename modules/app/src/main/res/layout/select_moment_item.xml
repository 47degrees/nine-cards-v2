<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SelectMomentItemRoot">

    <LinearLayout
        style="@style/SelectMomentItemContent">

        <cards.nine.app.ui.components.widgets.TintableImageView
            android:id="@+id/select_moment_item_icon"
            style="@style/SelectMomentItemIcon"/>

        <TextView
            android:id="@+id/select_moment_item_text"
            style="@style/SelectMomentItemText"/>

        <cards.nine.app.ui.components.widgets.TintableImageView
            android:id="@+id/select_moment_item_pin"
            style="@style/SelectMomentItemPin"/>

        <cards.nine.app.ui.components.widgets.TintableImageView
            android:id="@+id/select_moment_item_edit"
            style="@style/SelectMomentItemEdit"/>

        <cards.nine.app.ui.components.widgets.TintableImageView
            android:id="@+id/select_moment_item_delete"
            style="@style/SelectMomentItemDelete"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/select_moment_item_line"
        style="@style/SelectMomentItemLine" />

</FrameLayout>