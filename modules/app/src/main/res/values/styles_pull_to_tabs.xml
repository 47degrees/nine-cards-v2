<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PullToTabsContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PullToTabsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pulltotabs_max_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PullToTabsRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:layout_marginRight">@dimen/fastscroller_bar_width</item>
        <item name="android:clipToPadding">false</item>
    </style>

</resources>