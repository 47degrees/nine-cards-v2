<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WizardRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Loading -->

    <style name="WizardLoadingContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WizardLoadingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WizardLoadingMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_xlarge</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- User -->

    <style name="WizardUserContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WizardUserLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/wizard_logo</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:layout_marginTop">@dimen/wizard_margin_top_logo</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="WizardUserTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_xxxlarge</item>
        <item name="android:textColor">@color/wizard_text_title</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="WizardUserButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/wizard_min_width_button</item>
        <item name="android:padding">@dimen/padding_xlarge</item>
        <item name="android:text">@string/buttonLetStart</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/wizard_text_button_on</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="WizardUserTerms">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_xlarge</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:checked">true</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!-- Devices -->

    <style name="WizardDeviceContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WizardDeviceTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_xxxlarge</item>
        <item name="android:text">@string/welcome</item>
        <item name="android:textColor">@color/wizard_text_title</item>
    </style>

    <style name="WizardDeviceMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:text">@string/addDeviceMessage</item>
        <item name="android:textColor">@color/wizard_text_message</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="WizardDeviceRadioGroupScroll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="WizardDeviceRadioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textColor">@color/wizard_text_title</item>
        <item name="android:textSize">@dimen/text_default</item>
    </style>

    <style name="WizardDeviceButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/wizard_min_width_button</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:text">@string/buttonContinue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/wizard_text_button_on</item>
        <item name="android:layout_marginBottom">@dimen/padding_large</item>
    </style>

    <!-- Steps: Loading previous configuration -->

    <style name="WizardStepsContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WizardStepsWorkspace">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WizardBackgroundContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/wizard_height_image_content</item>
    </style>

    <style name="WizardStepsButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/wizard_min_width_button</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:text">@string/goTo9Cards</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/wizard_text_button</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/padding_large</item>
    </style>

    <style name="WizardStepsDownloadingMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:text">@string/downloadingYourSetup</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/wizard_text_downloading</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="WizardStepsPaginationPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_xlarge</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>

    <!-- Step Item -->

    <style name="WizardStepItemRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
