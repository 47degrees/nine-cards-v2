        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <item name="android:paddingLeft">@dimen/padding_default</item>
        <item name="android:paddingRight">@dimen/padding_default</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="WizardWifiCheckboxIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/padding_large</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="WizardWifiCheckboxNamesRoot">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WizardWifiCheckboxName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="WizardWifiCheckboxConnectedText">
        <item name="android:layout_width">@dimen/wizard_min_width_checkbox_wifi</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WizardWifiCheckboxLine">
        <item name="android:layout_width">@dimen/stroke_thin</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/wizard_line</item>
        <item name="android:layout_margin">@dimen/padding_default</item>
    </style>

    <style name="WizardWifiCheckboxSelectWifi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/icon_edit_moment_wifi</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Wizard Moment Checkbox -->

    <style name="WizardMomentCheckboxRoot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="WizardMomentCheckboxIconContent">
        <item name="android:layout_width">@dimen/wizard_size_moment_checkbox</item>
        <item name="android:layout_height">@dimen/wizard_size_moment_checkbox</item>
        <item name="android:layout_margin">@dimen/padding_default</item>
    </style>

    <style name="WizardMomentCheckboxIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WizardMomentCheckboxTagContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="WizardMomentCheckboxTag">
        <item name="android:layout_width">@dimen/wizard_size_checkbox_title</item>
        <item name="android:layout_height">@dimen/wizard_size_checkbox_title</item>
        <item name="android:layout_margin">@dimen/stroke_default</item>
    </style>

    <style name="WizardMomentCheckboxName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xxlarge</item>
        <item name="android:textColor">@color/wizard_text_title</item>
        <item name="android:layout_marginLeft">@dimen/padding_large</item>
    </style>

