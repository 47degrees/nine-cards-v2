    <style name="WizardStepItemImageContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/wizard_height_image_content</item>
    </style>

    <style name="WizardStepItemImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WizardStepItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/wizard_max_width_step_title</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_xxxlarge</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WizardStepItemMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/wizard_max_width_step_message</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textColor">@color/wizard_text_step_item_message</item>
        <item name="android:lines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Wizard Checkbox -->

    <style name="WizardCheckboxRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="WizardCheckboxIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
    </style>

    <style name="WizardCheckboxText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Wizard Wifi Checkbox -->

