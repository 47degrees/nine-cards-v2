    <style name="WizardNewConfigurationNextIcon">
        <item name="android:layout_width">@dimen/size_icon_app_small</item>
        <item name="android:layout_height">@dimen/size_icon_app_small</item>
    </style>

    <!-- Step 0 -->

    <style name="WizardNewConfigurationHeaderContentStep0" parent="WizardNewConfigurationHeaderContent">
        <item name="android:background">@color/wizard_new_conf_accent_1</item>
    </style>

    <style name="WizardNewConfigurationHeaderImageStep0" parent="WizardNewConfigurationHeaderImage">
        <item name="android:src">@drawable/placeholder_step_0</item>
