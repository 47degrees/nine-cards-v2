        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/wizard_height_header_steps</item>
    </style>

    <style name="WizardNewConfigurationHeaderImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WizardNewConfigurationTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xxxxlarge</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding_xxlarge</item>
    </style>

    <style name="WizardNewConfigurationDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
