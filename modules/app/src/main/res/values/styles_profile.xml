<resources>
    <style name="ProfileRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ProfileCoordinator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ProfileAppBarBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProfileAppBar" parent="ProfileAppBarBase"/>

    <style name="ProfileCollapsingToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed|snap</item>
    </style>

    <style name="ProfileUserFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_profile_user</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="layout_collapseMode">parallax</item>
        <item name="layout_collapseParallaxMultiplier">0.3</item>
    </style>

    <style name="ProfileUserLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ProfileUserAvatar">
        <item name="android:layout_width">@dimen/menu_size_avatar</item>
        <item name="android:layout_height">@dimen/menu_size_avatar</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ProfileUserName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
    </style>

    <style name="ProfileUserEmail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_menu_email</item>
    </style>
    
    <style name="ProfileTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabPaddingStart">@dimen/padding_small</item>
        <item name="tabPaddingEnd">@dimen/padding_small</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/ProfileTabText</item>
    </style>

    <style name="ProfileTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_default</item>
    </style>

    <style name="ProfileEmpty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_default</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ProfileEmptyContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/padding_empty_collection</item>
        <item name="android:paddingBottom">@dimen/padding_empty_collection</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ProfileEmptyMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:text">@string/collectionDetailAddCardsMessage</item>
        <item name="android:paddingLeft">@dimen/padding_empty_collection_message</item>
        <item name="android:paddingRight">@dimen/padding_empty_collection_message</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="ProfileEmptyImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_xlarge</item>
        <item name="android:src">@drawable/empty_collection</item>
    </style>

    <style name="ProfileRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="ProfileRecyclerLoading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <style name="ProfileToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ProfileAccountsItemHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ProfileAccountsItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/padding_xlarge</item>
        <item name="android:src">@drawable/icon_account_mobile</item>
    </style>

    <style name="ProfileAccountsItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ProfileAccountsItemLayoutData">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ProfileAccountsItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ProfileAccountsItemSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="ProfileAccountsItemAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ProfileLoading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ProfileConfigurationNameDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ProfileConfigurationNameWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProfileConfigurationName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:hint">@string/hintNewConfigurationName</item>
    </style>

</resources>