<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base -->

    <style name="BaseActionsRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background_actions</item>
    </style>

    <style name="BaseActionsTransitionView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BaseActionsLoadingContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="BaseActionsLoadingText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="BaseActionsLoading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseActionsContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:minHeight">@dimen/min_height_actions_dialogs</item>
    </style>

    <style name="BaseActionsToolbarDialogParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseActionsToolbarDialog" parent="BaseActionsToolbarDialogParent"/>

    <style name="BaseActionsToolbarRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseActionsToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="BaseActionsToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_fab_button</item>
        <item name="android:textSize">@dimen/text_xxlarge</item>
        <item name="android:textColor">@color/toolbar_title</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="BaseActionsToolbarSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_fab_button</item>
        <item name="android:textSize">@dimen/text_xxlarge</item>
        <item name="android:textColor">@color/toolbar_title</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:hint">@string/searchApps</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="BaseActionsToolbarExtendedContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_extended_content_toolbar</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
    </style>

    <style name="BaseActionsContentRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BaseActionsContentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BaseActionsFabButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_fab_button</item>
        <item name="android:layout_marginRight">@dimen/margin_fab_button</item>
        <item name="android:layout_gravity">right</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">@dimen/elevation_fab_button</item>
        <item name="pressedTranslationZ">@dimen/elevation_fab_button_pressed</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="BaseActionsErrorContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseActionsErrorMessage">
        <item name="android:layout_width">@dimen/width_error_dialog_message</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="BaseActionsErrorIcon">
        <item name="android:layout_width">@dimen/size_icon_error</item>
        <item name="android:layout_height">@dimen/size_icon_error</item>
        <item name="android:layout_marginBottom">@dimen/padding_large</item>
    </style>

    <style name="BaseActionsErrorButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/error_dialog_min_width_button</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:text">@string/buttonErrorReload</item>
        <item name="android:textColor">@color/error_dialog_text_button</item>
        <item name="android:layout_marginTop">@dimen/padding_large</item>
    </style>

    <!-- Content -->

    <style name="ActionsListContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ActionsRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ActionsFastScroll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="ActionsViewTransition">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AddAppsActionsRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AddAppsMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_xlarge</item>
    </style>

    <style name="AddAppsSelectedMessageContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AddAppsSelectedMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:paddingLeft">@dimen/padding_xlarge</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:text">@string/selectedApps</item>
    </style>

    <style name="AddAppsActionsRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:layout_marginRight">@dimen/fastscroller_bar_width</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- Widgets -->

    <style name="WidgetsActionsListContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WidgetsActionsScrollMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WidgetsActionsMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WidgetsActionsRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- New / Edit Collection -->

    <style name="NewCollectionRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="NewCollectionName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xxxlarge</item>
        <item name="android:background">@null</item>
        <item name="android:hint">@string/collectionName</item>
        <item name="android:textColorHint">@color/hint_collection_name</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:maxLength">26</item>
    </style>

    <style name="NewCollectionSelectorContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_select_new_collection</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="NewCollectionSelectorIcon">
        <item name="android:layout_width">@dimen/size_icon_select_new_collection</item>
        <item name="android:layout_height">@dimen/size_icon_select_new_collection</item>
        <item name="android:layout_marginRight">@dimen/padding_large</item>
    </style>

    <style name="NewCollectionSelectorTitle">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <!-- Edit Moment -->

    <style name="AddMomentRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="AddMomentIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:layout_marginRight">@dimen/padding_large</item>
    </style>

    <style name="AddMomentTextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AddMomentName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xxlarge</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
    </style>

    <style name="AddMomentDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_default</item>
    </style>

    <!-- Edit Moment -->

    <style name="EditMomentScroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditMomentRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
    </style>

    <style name="EditMomentItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EditMomentHeaderContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:layout_marginTop">@dimen/padding_default</item>
    </style>

    <style name="EditMomentBodyContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="EditMomentHeaderIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditMomentHeaderIconCollection" parent="EditMomentHeaderIcon">
        <item name="android:src">@drawable/icon_edit_moment_link_collection</item>
    </style>

    <style name="EditMomentHeaderIconHours" parent="EditMomentHeaderIcon">
        <item name="android:src">@drawable/icon_edit_moment_hours</item>
    </style>

    <style name="EditMomentHeaderIconWifi" parent="EditMomentHeaderIcon">
        <item name="android:src">@drawable/icon_edit_moment_wifi</item>
    </style>

    <style name="EditMomentHeaderName">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:paddingLeft">@dimen/padding_default</item>
    </style>

    <style name="EditMomentHeaderCollectionName" parent="EditMomentHeaderName">
        <item name="android:text">@string/linkCollection</item>
    </style>

    <style name="EditMomentHeaderHoursName" parent="EditMomentHeaderName">
        <item name="android:text">@string/hours</item>
    </style>

    <style name="EditMomentHeaderWifiName" parent="EditMomentHeaderName">
        <item name="android:text">@string/wifi</item>
    </style>

    <style name="EditMomentHeaderAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditMomentHeaderActionInfo" parent="EditMomentHeaderAction">
        <item name="android:src">@drawable/icon_edit_moment_info</item>
    </style>

    <style name="EditMomentHeaderActionAdd" parent="EditMomentHeaderAction">
        <item name="android:src">@drawable/icon_edit_moment_add</item>
    </style>

    <style name="EditMomentHeaderSelectCollection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:layout_margin">@dimen/padding_large</item>
    </style>

    <style name="EditMomentHeaderSpecificMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:layout_margin">@dimen/padding_xlarge</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Edit Hour Moment -->

    <style name="EditHourMomentRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_default</item>
    </style>

    <style name="EditHourMomentContent">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EditHourMomentHoursLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditHourMomentHourContent">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_marginLeft">@dimen/padding_default</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
    </style>

    <style name="EditHourMomentHourText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
    </style>

    <style name="EditHourMomentHourLine" parent="ActionsLine">
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="EditHourMomentDaysContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Edit Hour Moment -->

    <style name="EditWifiMomentRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="EditWifiMomentWifiLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditWifiMomentWifiText">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
    </style>

    <!-- Commons actions -->

    <style name="ActionsActionDelete" parent="EditMomentHeaderAction">
        <item name="android:src">@drawable/icon_edit_moment_delete</item>
    </style>

    <style name="ActionsLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_default</item>
        <item name="android:tag">line</item>
    </style>

</resources>