<resources>

    <style name="MenuDrawerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MenuNavigationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="MenuAppsMomentContent">
        <item name="android:layout_width">@dimen/size_apps_bar_moment</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MenuAppsMomentScroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MenuAppsMomentApps">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MenuAppsMomentIconContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_header_apps_bar_moment</item>
    </style>

    <style name="MenuAppsMomentIcon">
        <item name="android:layout_width">@dimen/size_icon_apps_bar_moment</item>
        <item name="android:layout_height">@dimen/size_icon_apps_bar_moment</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MenuHeaderRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:background">@color/background_menu_header</item>
    </style>

    <style name="MenuHeaderContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="MenuHeaderCover">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MenuHeaderAvatar">
        <item name="android:layout_width">@dimen/menu_size_avatar</item>
        <item name="android:layout_height">@dimen/menu_size_avatar</item>
    </style>

    <style name="MenuHeaderName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/text_menu_name</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MenuHeaderEmail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_menu_email</item>
    </style>

</resources>