<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LauncherRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LauncherForeground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LauncherLoading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LauncherRootContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="LauncherTopBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LauncherCollectionActionsPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_search_box</item>
        <item name="android:layout_margin">@dimen/padding_default</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LauncherCollectionActionsRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LauncherCollectionActionLayout">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LauncherCollectionAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_launcher_action</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">@dimen/padding_default</item>
        <item name="android:layout_marginLeft">@dimen/padding_default</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
    </style>

    <!-- Search Panel (App Drawer) -->

    <style name="LauncherSearchPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="LauncherSearchDrawerPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_search_box</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="LauncherSearchHeader">
        <item name="android:layout_width">@dimen/height_search_box</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="LauncherSearchHeaderLine">
        <item name="android:layout_width">@dimen/divider_default</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_color_search_box</item>
    </style>

    <style name="LauncherSearchEditText">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/drawer_search_box</item>
        <item name="android:textColorHint">@color/drawer_search_box_hint</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginLeft">@dimen/padding_default</item>
    </style>

    <style name="LauncherSearchIcon">
        <item name="android:layout_width">@dimen/height_search_box</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- Collections Panel -->

    <style name="LauncherCollectionsContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="LauncherCollectionsPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_search_box</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="LauncherCollectionsBurgerButton">
        <item name="android:layout_width">@dimen/height_search_box</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/search_bar_icon_light</item>
    </style>

    <style name="LauncherCollectionsGoogleButton">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
    </style>

    <style name="LauncherCollectionsMicButton">
        <item name="android:layout_width">@dimen/height_search_box</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- Moment Panel -->

    <style name="LauncherMomentPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_search_box</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="LauncherMomentInfoContent">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LauncherMomentIconContent">
        <item name="android:layout_width">@dimen/width_icon_content_top_bar_moment</item>
        <item name="android:layout_height">@dimen/height_icon_content_top_bar_moment</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/padding_medium</item>
    </style>

    <style name="LauncherMomentIcon">
        <item name="android:layout_width">@dimen/size_icon_top_bar_moment</item>
        <item name="android:layout_height">@dimen/size_icon_top_bar_moment</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LauncherMomentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_launcher_moment_panel</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LauncherMomentClock" parent="LauncherMomentText">
        <item name="android:paddingLeft">@dimen/padding_small</item>
    </style>

    <style name="LauncherMomentWeather">
        <item name="android:layout_width">@dimen/height_search_box</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/icon_weather_clear</item>
    </style>

    <style name="LauncherMomentUnpin">
        <item name="android:layout_width">@dimen/height_search_box</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/icon_action_unpin</item>
    </style>

    <style name="LauncherMomentGoogleButton">
        <item name="android:layout_width">@dimen/height_search_box</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/icon_google_search</item>
    </style>

    <style name="LauncherMomentMicButton">
        <item name="android:layout_width">@dimen/height_search_box</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/icon_mic_search</item>
    </style>


    <!-- App Drawer -->

    <style name="LauncherAnimatedDrawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LauncherWorkSpacesLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LauncherWorkSpaces">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LauncherWorkSpacesEdgeLeft">
        <item name="android:layout_width">@dimen/size_edge_workspace</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LauncherWorkSpacesEdgeRight">
        <item name="android:layout_width">@dimen/size_edge_workspace</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LauncherDrawerPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingLeft">@dimen/padding_default</item>
        <item name="android:paddingRight">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="LauncherDrawerRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LauncherDrawerContentItem">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LauncherDrawerItem">
        <item name="android:layout_width">@dimen/size_icon_app_drawer</item>
        <item name="android:layout_height">@dimen/size_icon_app_drawer</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LauncherDrawerAppsItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/icon_app_drawer</item>
    </style>

    <style name="LauncherPaginationPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_launcher_pager</item>
        <item name="android:layout_margin">@dimen/padding_default</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Collection Item -->

    <style name="LauncherCollectionItemRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LauncherCollectionItemLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LauncherCollectionItemIconRoot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="LauncherCollectionItemIconParent">
        <item name="android:layout_width">@dimen/size_group_collection_medium</item>
        <item name="android:layout_height">@dimen/size_group_collection_medium</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LauncherCollectionItemIcon" parent="LauncherCollectionItemIconParent" />

    <style name="LauncherCollectionItemName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/collection_group_name</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- FAB Menu -->

    <style name="LauncherFabMenuContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/margin_bottom_fab_menu_content_collections</item>
        <item name="android:cropToPadding">false</item>
    </style>

    <style name="LauncherFabButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_fab_button</item>
        <item name="android:layout_gravity">end</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">@dimen/elevation_fab_button</item>
        <item name="pressedTranslationZ">@dimen/elevation_fab_button_pressed</item>
    </style>

    <!-- Collection Menu -->

    <style name="LauncherCollectionMenuRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="LauncherCollectionMenuContentBottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="LauncherCollectionMenuButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/text_large</item>
        <item name="android:drawablePadding">@dimen/padding_default</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_menu_name</item>
        <item name="android:textSize">@dimen/text_default</item>
    </style>

    <style name="LauncherCollectionMenuButtonWallpaper" parent="LauncherCollectionMenuButton">
        <item name="android:drawableTop">@drawable/launcher_fab_button_item_wallpaper</item>
        <item name="android:text">@string/wallpaperTitle</item>
    </style>

    <style name="LauncherCollectionMenuButtonWidgets" parent="LauncherCollectionMenuButton">
        <item name="android:drawableTop">@drawable/launcher_fab_button_item_widgets</item>
        <item name="android:text">@string/widgetsTitle</item>
    </style>

    <style name="LauncherCollectionMenuButtonSetting" parent="LauncherCollectionMenuButton">
        <item name="android:drawableTop">@drawable/launcher_fab_button_item_settings</item>
        <item name="android:text">@string/nineCardsSettingsTitle</item>
    </style>

    <style name="LauncherCollectionMenuContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/size_workspace_menu_item</item>
    </style>

    <!-- Collections Workspace -->

    <style name="LauncherCollectionsRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LauncherCollectionsGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Edit Widgets Top Bar -->

    <style name="LauncherEditWidgetsTopBarPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_search_box</item>
        <item name="android:layout_margin">@dimen/padding_default</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">0dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="LauncherEditWidgetsTopBarRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LauncherEditWidgetsTopBarIcon">
        <item name="android:layout_width">@dimen/edit_widgets_size_icon</item>
        <item name="android:layout_height">@dimen/edit_widgets_size_icon</item>
    </style>

    <style name="LauncherEditWidgetsTopBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_default</item>
        <item name="android:textColor">@color/text_launcher_moment_panel</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <!-- Edit Widgets Bottom Bar -->

    <style name="LauncherEditWidgetsBottomBarPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_edit_widgets_bottom</item>
        <item name="android:layout_margin">@dimen/padding_default</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="LauncherEditWidgetsBottomBarRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LauncherEditWidgetsBottomBarActions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LauncherEditWidgetsBottomBarVerticalButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LauncherEditWidgetsBottomBarIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding_xlarge</item>
        <item name="android:layout_marginRight">@dimen/padding_xlarge</item>
    </style>

    <style name="LauncherEditWidgetsBottomBarCursor">
        <item name="android:layout_width">@dimen/size_widget_cursor</item>
        <item name="android:layout_height">@dimen/size_widget_cursor</item>
        <item name="android:layout_margin">@dimen/padding_default</item>
    </style>

</resources>