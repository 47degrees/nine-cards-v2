<resources>

    <!-- Workspace Menu Item -->

    <style name="WorkspaceMenuItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="WorkspaceMenuItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/collection_workspace_button_item_title</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="WorkspaceMenuItemIcon">
        <item name="android:layout_width">@dimen/size_workspace_menu_item</item>
        <item name="android:layout_height">@dimen/size_workspace_menu_item</item>
        <item name="android:layout_margin">@dimen/padding_default</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- WorkSpace Moment Icon -->

    <style name="WorkSpaceMomentIcon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="WorkSpaceMomentIconTitle">
        <item name="android:layout_width">@dimen/size_workspace_moment_icon</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="WorkSpaceMomentIconDrawableContent">
        <item name="android:layout_width">@dimen/size_workspace_moment_icon</item>
        <item name="android:layout_height">@dimen/size_workspace_moment_icon</item>
    </style>

    <style name="WorkSpaceMomentIconDrawable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Fab Menu Item -->

    <style name="FabMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:gravity">end</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FabMenuItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FabMenuItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_title_fab_menu_item</item>
        <item name="android:textColor">@color/collection_fab_button_item_title</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="FabMenuItemIcon">
        <item name="android:layout_width">@dimen/size_fab_menu_item</item>
        <item name="android:layout_height">@dimen/size_fab_menu_item</item>
        <item name="android:layout_marginLeft">@dimen/margin_horizontal_fab_button_item</item>
        <item name="android:layout_marginRight">@dimen/margin_horizontal_fab_button_item</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_fab_button_item</item>
        <item name="android:layout_marginBottom">@dimen/margin_vertical_fab_button_item</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>