<resources>

    <style name="CardRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CardIconContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardIcon">
        <item name="android:layout_width">@dimen/size_icon_app_medium</item>
        <item name="android:layout_height">@dimen/size_icon_app_medium</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CardText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">2</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:paddingLeft">@dimen/padding_default</item>
        <item name="android:paddingRight">@dimen/padding_default</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CardSelected">
        <item name="android:layout_width">@dimen/size_selected_icon</item>
        <item name="android:layout_height">@dimen/size_selected_icon</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_margin">@dimen/padding_small</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CardBadge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_margin">@dimen/padding_small</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>