<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FastScrollerSignalParent">
        <item name="android:layout_width">@dimen/fastscroller_signal_size</item>
        <item name="android:layout_height">@dimen/fastscroller_signal_size</item>
        <item name="android:background">@drawable/fastscroller_signal</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginRight">@dimen/fastscroller_signal_margin_right</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="FastScrollerSignal" parent="FastScrollerSignalParent" />

    <style name="FastScrollerText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/fastscroller_text_size</item>
        <item name="android:textColor">@color/fastscroller_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FastScrollerIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/fastscroller_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
    </style>

    <style name="FastScrollerBarContent">
        <item name="android:layout_width">@dimen/fastscroller_bar_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/padding_large</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="FastScrollerBar">
        <item name="android:layout_width">@dimen/fastscroller_bar_width</item>
        <item name="android:layout_height">@dimen/fastscroller_bar_height</item>
        <item name="android:src">@drawable/fastscroller_bar</item>
    </style>

</resources>