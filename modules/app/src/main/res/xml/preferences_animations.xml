<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/animationsPrefTitle">

        <ListPreference
            android:key="speed"
            android:defaultValue="1"
            android:entries="@array/speeds"
            android:entryValues="@array/speedsValues"
            android:title="@string/speedTitle"
            android:summary="@string/speedSummary"/>

        <ListPreference
            android:key="collectionOpening"
            android:defaultValue="0"
            android:entries="@array/collectionOpenings"
            android:entryValues="@array/collectionOpeningsValues"
            android:title="@string/collectionOpeningTitle"
            android:summary="@string/collectionOpeningSummary"/>

        <ListPreference
            android:key="workspaceAnimation"
            android:defaultValue="0"
            android:entries="@array/workspaceAnimations"
            android:entryValues="@array/workspaceAnimationsValues"
            android:title="@string/workspaceAnimationTitle"
            android:summary="@string/workspaceAnimationSummary"/>

        <CheckBoxPreference
            android:key="wallpaperAnimation"
            android:defaultValue="true"
            android:title="@string/wallpaperAnimationTitle"
            android:summary="@string/wallpaperAnimationSummary"/>

    </PreferenceCategory>

</PreferenceScreen>
